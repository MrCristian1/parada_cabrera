<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imagen_registro"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="REGISTRO DE PRODUCTOS"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPRegistroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Nombre"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/editTextTextPRegistroName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Precio"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/editTextTextPRegistroName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Imagen"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/botoniniciarsesion"
            android:backgroundTint="@color/white"
            android:text="@string/txt_btn_registrar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>